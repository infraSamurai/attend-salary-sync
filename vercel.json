{
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.0.20"
    }
  },
  "build": {
    "env": {
      "NODE_VERSION": "22.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}